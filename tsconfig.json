{
  "compilerOptions": {
    "lib": ["es5", "es6", "DOM"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "delivery/*": ["delivery/*"],
      "domain/*": ["domain/*"],
      "driver/*": ["driver/*"],
      "repository/*": ["repository/*"],
      "service/*": ["service/*"],
      "usercase/*": ["usercase/*"]
    }
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "public/docs",
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
